{
  "name": "@liximomo/react-virtual-scroller",
  "version": "1.0.0-alpha.3",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "module": "es/index.js",
  "browser": "dist/react-virtual-scroller.umd.js",
  "author": "liximomo <liximomo@gmail.com> (https://liximomo.github.io/)",
  "repository": {
    "url": "git@github.com:liximomo/react-virtual-scroller.git",
    "type": "git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "watch:js": "cross-env BABEL_ENV=umd NODE_ENV=development rollup -c -w",
    "prebuild": "npm run lint",
    "build": "npm run build:commonjs && npm run build:esm && npm run build:umd",
    "build:commonjs": "cross-env BABEL_ENV=commonjs NODE_ENV=production babel src --out-dir lib",
    "build:esm": "cross-env BABEL_ENV=esm NODE_ENV=production babel src --out-dir es",
    "build:umd": "cross-env NODE_ENV=production rollup -c",
    "postbuild": "cp dist/* website/static/js/",
    "lint": "eslint src/**/*.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.5.5",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "babel-eslint": "10.x",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "cross-env": "^5.2.1",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1",
    "recomputed": "1.0.1-alpha.4"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "jest": {
    "testMatch": [
      "**/test/*.js"
    ]
  }
}
